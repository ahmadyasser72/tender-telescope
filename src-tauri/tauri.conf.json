{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "tender-telescope",
  "version": "0.1.13",
  "identifier": "com.telescope.tender",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4321",
    "beforeDevCommand": "bun run dev"
  },
  "app": {
    "windows": [
      {
        "title": "tender-telescope",
        "width": 1280,
        "height": 720,
        "resizable": false,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
